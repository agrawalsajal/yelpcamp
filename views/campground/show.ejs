<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<ul class="list-group">
			  <li class="list-group-item active">item 1</li>
			  <li class="list-group-item">item 2</li>
			  <li class="list-group-item">item 3</li>
			</ul>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img src=" <%= camp.image %> ">
				<div class="caption">
					<span class="pull-right"> <strong>Rs.<%= camp.price %>/night</strong> </span>
					<a gref="#"> <%= camp.name %> </a>
					<p> <%= camp.description %> </p>
					<p><em>This camp was created by <strong><%= camp.author.username %></strong></em></p>
					<% if(currentUser && currentUser._id.equals(camp.author.id)){ %>
						<a class="btn btn-warning btn-sm" href="/campgrounds/<%= camp._id %>/edit">Edit</a>
						<form class="del-button" action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
							<button class="btn btn-danger btn-sm" >Delete</button>
						</form>
					<% } %>
				</div>
			</div>

			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/campgrounds/<%= camp._id %>/comments/new" >Add comments</a>
				</div>
				<hr>
				<% camp.comments.forEach(function(comment){ %>
					<div class="row mgn-btm">
						<div class="col-md-12">
							<span class="pull-right">10 days ago</span>
							<strong><%= comment.author.username %></strong>
							<p class="mgn-btm-none"><%= comment.text %></p> 
							<% if(currentUser && currentUser._id.equals(comment.author.id)){ %>
								<a class="btn btn-warning btn-xs" href="/campgrounds/<%= camp._id %>/comments/<%= comment._id %>/edit">Edit</a>
								<form class="del-button" action="/campgrounds/<%= camp._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
									<button class="btn btn-danger btn-xs" >Delete</button>
								</form>
							<% } %>
						</div>
					</div>
				<% }) %>
			</div>
		</div>
	<div>
</div>















<% include ../partials/footer %>
